{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": [
      "jest",
      "node"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/app/*"
      ]
    }
  },
  "files": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.d.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.d.ts"
  ]
}